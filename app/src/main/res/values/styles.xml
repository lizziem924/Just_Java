<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        //app bar
        <item name="colorPrimary">#0288D1</item>
        //darker variant for status bar and other app bars
        <item name="colorPrimaryDark">#01579B</item>
        //checkboxes and text fields
        <item name="colorAccent">#283593</item>
    </style>

    <style name="headers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
</style>

    <style name="buttons">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#0288D1</item>
    </style>
</resources>